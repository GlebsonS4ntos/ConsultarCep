<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsultarCEP.MainPage">

    <StackLayout BackgroundColor="#ffbf00" Padding="30" Spacing="30">
        <Image Source="Logo.png" />
        <Entry Placeholder="Digite o CEP" PlaceholderColor="#ffbf00" BackgroundColor="#fff" x:Name="CEP_DIGITADO" Completed="ExecultarBuscaCep"/>
        <Button Text="Buscar CEP" TextColor="#ffffff" BackgroundColor="#00416B" x:Name="BOTAO" Clicked="ExecultarBuscaCep"/>
        
        <Label x:Name="LOGRADOURO" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Label x:Name="BAIRRO" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Label x:Name="LOCALIDADE" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Label x:Name="UF" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Label x:Name="CEP" HorizontalOptions="Center" VerticalOptions="Center"/>
    </StackLayout>

</ContentPage>
